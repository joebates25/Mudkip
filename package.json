{
  "name": "markdown-viewer-poc",
  "version": "1.0.0",
  "description": "",
  "main": "electron/main.cjs",
  "packageManager": "bun@1.3.6",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "desktop": "bun run build && electron .",
    "desktop:dist": "bun run build && bunx electron-builder --mac"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "chokidar": "^5.0.0",
    "dompurify": "^3.3.1",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.1",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-task-lists": "^2.1.1"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.0.12",
    "serve": "^14.2.5",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.josephbates.markdownviewer",
    "productName": "Markdown Viewer",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "fileAssociations": [
      {
        "ext": [
          "md",
          "markdown",
          "mdown",
          "mkd"
        ],
        "name": "Markdown Document",
        "role": "Editor"
      }
    ]
  }
}
